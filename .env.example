# Authentication
NEXTAUTH_SECRET=your_32_character_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth  
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# AI Model Configuration
GEMINI_MODEL=gemini-2.5-flash
PROJECT_ID=your_google_cloud_project_id_here

# CORS Configuration
# Use either CORS_ALLOWED_ORIGINS (a comma-separated list for specific domains)
# or CORS_ALLOWED_ORIGIN_REGEX (a single regex for dynamic or multiple subdomains).
# The regex will be used if both are set.

# Example for a simple list of allowed origins:
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-app.com

# Example for a regex that allows any subdomain of 'your-app.com' and localhost:
# CORS_ALLOWED_ORIGIN_REGEX=^https?://(([^.]+\.)?your-app\.com|localhost)(:[0-9]+)?$

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY=your_firebase_service_account_key_json_here
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id_here

# Cloud Run Configuration
CLOUD_RUNNER_AGENT_API_URL=your_cloud_run_agent_api_url_here

# For detailed Cloud Run deployment instructions, see: DEPLOYMENT.md

# Feature Flags
NEXT_PUBLIC_FEATURE_ROLE_RESTRICTION_ENABLED=false